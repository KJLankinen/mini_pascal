{*
    This program tests some reals
*}
program test_reals;

function add(a: real, b: real): real;
begin
    return a + b;
end;

function sub(a: real, b: real): real;
begin
    return a - b;
end;

function mul(a: real, b: real): real;
begin
    return a * b;
end;

function div(a: real, b: real): real;
begin
    return a / b;
end;

function mad(a: real, b: real, c: real): real;
begin
    return a * b + c;
end;

{* Main block *}
begin
    var a, b, c: real;
    read(a, b, c);
    writeln(a, " + ", b, " = ", add(a, b));
    writeln(a, " - ", b, " = ", sub(a, b));
    writeln(a, " * ", b, " = ", mul(a, b));
    writeln(a, " / ", b, " = ", div(a, b));

    div();
    div(a);
    div(a, a, a, a, a);
    div(i);

    writeln("The next four are different ways to calculate ", a, " * ", a, " + ", a);
    writeln(mad(a, a, a));
    writeln(add(a, mul(a, a)));
    writeln(a + mul(a, a));
    writeln(add(a, a * a));
end.
